<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List </title>
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>
<body>
    <div class="bg-light">
        <div class="container py-5">
            <h4 class="text-center mb-4 display-5 fw-bold"><%= listTitle %> Tasks List</h4>
            <div class="row py-5">
                <% for(let i = 0; i < newListItems.length; i++) { %>
                    <div class="col-12">
                        <div class="card shadow-sm task-card">
                            <div class="card-body d-flex align-item-center">
                                <input type="checkbox" class="form-check-input me-3 task-check-box" id="task<%= i %>" data-index="<%= i %>">
                                <label class="form-check-label mb-0 flex-grow-1 task-label" for="<%= i %>"><%= newListItems[i] %></label>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>

            <form action="/" method="post" class="d-flex gap-2">
                <input type="text" class="form-control form-control-lg" name="newItem" placeholder="Add New Task..." autocomplete="off" required>
                <button class="btn btn-primary btn-lg" type="submit" name="submit" value="<%= listTitle %>">Add</button>
            </form>
        </div>
    </div>
       <!-- Bootstrap JS (Optional for interactive features) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom JS for line-through toggle -->
    <script>
        document.querySelectorAll('.task-checkbox').forEach((checkbox) => {
            checkbox.addEventListener('change', function() {
                const taskLabel = this.nextElementSibling;  // Get the label next to the checkbox
                if (this.checked) {
                    taskLabel.classList.add('completed');  // Add 'completed' class for checked tasks
                } else {
                    taskLabel.classList.remove('completed');  // Remove 'completed' class for unchecked tasks
                }
            });
        });
    </script>
</body>
</html>